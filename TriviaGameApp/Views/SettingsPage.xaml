<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="TriviaGameApp.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Settings">

    <!-- Minimalistic Japanese style: subtle accent color, spacing, etc. -->
    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Example style for labels, with a Japanese-inspired font or accent color. -->
            <Style x:Key="JapaneseLabelStyle" TargetType="Label">
                <!-- For demonstration, let's use a generic font: "Yu Mincho" or a fallback. -->
                <Setter Property="FontFamily" Value="Yu Mincho, 'MS Mincho', serif" />
                <Setter Property="TextColor" Value="{AppThemeBinding Light=#111, Dark=#eee}" />
                <Setter Property="FontSize" Value="16" />
            </Style>

            <!-- Style for pickers in minimalistic design. -->
            <Style x:Key="MinimalPickerStyle" TargetType="Picker">
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#F0F0F0, Dark=#333}" />
                <Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
                <Setter Property="FontFamily" Value="Yu Mincho, 'MS Mincho', serif" />
            </Style>

            <!-- Style for the entire page (optional). -->
            <Style TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#F9F9F9, Dark=#1A1A1A}" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Category -->
            <Label Text="Category" FontAttributes="Bold" Style="{StaticResource JapaneseLabelStyle}" />
            <Picker 
                x:Name="CategoryPicker"
                Style="{StaticResource MinimalPickerStyle}"
                Title="Select Category" />

            <!-- Difficulty -->
            <Label Text="Difficulty" FontAttributes="Bold" Style="{StaticResource JapaneseLabelStyle}" />
            <Picker 
                x:Name="DifficultyPicker"
                Style="{StaticResource MinimalPickerStyle}"
                Title="Select Difficulty" />

            <!-- Type -->
            <Label Text="Type" FontAttributes="Bold" Style="{StaticResource JapaneseLabelStyle}" />
            <Picker 
                x:Name="TypePicker"
                Style="{StaticResource MinimalPickerStyle}"
                Title="Select Type" />

            <!-- Number of Questions -->
            <Label Text="Number of Questions" FontAttributes="Bold" Style="{StaticResource JapaneseLabelStyle}" />
            <HorizontalStackLayout Spacing="10">
                <Label 
                    Text="{Binding Source={x:Reference QuestionStepper}, Path=Value, StringFormat='{0:F0}'}" 
                    HorizontalOptions="Center" 
                    WidthRequest="30"
                    Style="{StaticResource JapaneseLabelStyle}"
                />
                <Stepper 
                    BackgroundColor="{AppThemeBinding Light=#E7E7E7, Dark=#444}"
                    x:Name="QuestionStepper"
                    Minimum="1"
                    Maximum="50"
                    Increment="1"
                    Value="10"
                    ValueChanged="OnQuestionsStepperValueChanged" />
            </HorizontalStackLayout>

            <!-- Theme Option -->
            <Label Text="Theme" FontAttributes="Bold" Style="{StaticResource JapaneseLabelStyle}" />
            <Picker 
                x:Name="ThemePicker"
                Style="{StaticResource MinimalPickerStyle}"
                Title="Select Theme" />

            <!-- Save Button -->
            <Button 
                Text="Save Settings"
                FontFamily="Yu Mincho, 'MS Mincho', serif"
                BackgroundColor="{AppThemeBinding Light=#E7E7E7, Dark=#444}"
                TextColor="{AppThemeBinding Light=Black, Dark=White}"
                Clicked="OnSaveSettingsClicked" 
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
