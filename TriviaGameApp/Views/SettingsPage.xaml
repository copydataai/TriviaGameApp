<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="TriviaGameApp.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="JapaneseLabelStyle" TargetType="Label">
                <Setter Property="FontFamily" Value="Yu Mincho, 'MS Mincho', serif" />
                <Setter Property="FontSize" Value="16" />
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <Grid 
            Padding="20"
            RowSpacing="20" 
            ColumnSpacing="15" 
            RowDefinitions="Auto,Auto,Auto,Auto,Auto"
            ColumnDefinitions="Auto,*,Auto,*"
            HorizontalOptions="CenterAndExpand"
            MaximumWidthRequest="600">

            <Border 
                Grid.Row="0" 
                Grid.ColumnSpan="4"
                Stroke="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary_Dark}}"
                StrokeThickness="1"
                Margin="0,0,0,20">
                <Grid ColumnDefinitions="Auto,*,Auto,*" ColumnSpacing="15" Padding="10">
                    <Label 
                        Grid.Column="0" 
                        Text="Category" 
                        FontAttributes="Bold" 
                        Style="{StaticResource JapaneseLabelStyle}" 
                        VerticalOptions="Center"/>
                    <Picker 
                        Grid.Column="1"
                        x:Name="CategoryPicker"
                        Title="Select Category" 
                        Margin="0,0,15,0"/>
                    
                    <Label 
                        Grid.Column="2" 
                        Text="Difficulty" 
                        FontAttributes="Bold" 
                        Style="{StaticResource JapaneseLabelStyle}" 
                        VerticalOptions="Center"/>
                    <Picker 
                        Grid.Column="3"
                        x:Name="DifficultyPicker"
                        Title="Select Difficulty"/>
                </Grid>
            </Border>

            <Border 
                Grid.Row="1" 
                Grid.ColumnSpan="4"
                Stroke="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary_Dark}}"
                StrokeThickness="1"
                Margin="0,0,0,20">
                <Grid ColumnDefinitions="Auto,*,Auto,*" ColumnSpacing="15" Padding="10">
                    <Label 
                        Grid.Column="0" 
                        Text="Type" 
                        FontAttributes="Bold" 
                        Style="{StaticResource JapaneseLabelStyle}" 
                        VerticalOptions="Center"/>
                    <Picker 
                        Grid.Column="1"
                        x:Name="TypePicker"
                        Title="Select Type" 
                        Margin="0,0,15,0"/>
                    
                    <Label 
                        Grid.Column="2" 
                        Text="Theme" 
                        FontAttributes="Bold" 
                        Style="{StaticResource JapaneseLabelStyle}" 
                        VerticalOptions="Center"/>
                    <Picker 
                        Grid.Column="3"
                        x:Name="ThemePicker"
                        Title="Select Theme"/>
                </Grid>
            </Border>

            <Border 
                Grid.Row="2" 
                Grid.RowSpan="2"
                Grid.ColumnSpan="4"
                Stroke="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary_Dark}}"
                StrokeThickness="1"
                Margin="0,0,0,20">
                <VerticalStackLayout Padding="10" Spacing="10">
                    <Label 
                        Text="Number of Questions" 
                        FontAttributes="Bold" 
                        Style="{StaticResource JapaneseLabelStyle}"
                        HorizontalOptions="Center"/>

                    <HorizontalStackLayout 
                        HorizontalOptions="Center" 
                        Spacing="10">
                        <Label 
                            Text="{Binding Source={x:Reference QuestionStepper}, Path=Value, StringFormat='{0:F0}'}" 
                            VerticalOptions="Center"
                            WidthRequest="30"
                            Style="{StaticResource JapaneseLabelStyle}"/>
                        <Stepper 
                            x:Name="QuestionStepper"
                            BackgroundColor="{AppThemeBinding Light=#E7E7E7, Dark=#444}"
                            Minimum="1"
                            Maximum="50"
                            Increment="1"
                            Value="10"
                            ValueChanged="OnQuestionsStepperValueChanged"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>

            <Button 
                Grid.Row="4" 
                Grid.Column="0" 
                Grid.ColumnSpan="4"
                Text="Save Settings"
                FontFamily="Yu Mincho, 'MS Mincho', serif"
                BackgroundColor="{AppThemeBinding Light=#E7E7E7, Dark=#444}"
                TextColor="{AppThemeBinding Light=Black, Dark=White}"
                Clicked="OnSaveSettingsClicked"
                HorizontalOptions="Center"
                Margin="0,10,0,0"
                WidthRequest="200"/>
        </Grid>
    </ScrollView>
</ContentPage>
