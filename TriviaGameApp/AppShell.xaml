<?xml version="1.0" encoding="UTF-8" ?>
<Shell 
    x:Class="TriviaGameApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TriviaGameApp.Views">

    <!-- 
        Define routes for each page:
        - StartPage (initial/home)
        - PlayersView
        - LeaderboardPage
        - SettingsPage
    -->
    <ShellContent 
        Route="StartPage" 
        ContentTemplate="{DataTemplate views:StartPage}" />

    <ShellContent 
        Route="PlayersView" 
        ContentTemplate="{DataTemplate views:PlayersView}" />

    <ShellContent 
        Route="LeaderboardPage" 
        ContentTemplate="{DataTemplate views:LeaderboardPage}" />

    <ShellContent 
        Route="SettingsPage" 
        ContentTemplate="{DataTemplate views:SettingsPage}" />
    
    <ShellContent 
        Route="GamePage" 
        ContentTemplate="{DataTemplate views:GamePage}" />

</Shell>
